<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
   
      <%= form_with(model: @user, class: " p-3 mb-3 ccimg rounded bg-light", local: true) do |f| %>
        <div class="form-group row mb-3"> <div class="col-2"></div>
      <!--    <%= f.label :username, class: "col-2 col-form-label text-dark" %>--> 
          <div class="col-8">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "имя" %>
          </div>
        </div>

        <div class="form-group row mb-3"> <div class="col-2"></div>
     <!--    <%= f.label :email, class: "col-2 col-form-label text-dark" %>--> 
          <div class="col-8"> 
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "почта" %>
          </div>
        </div>

        <div class="form-group row mb-3">
        <div class="col-2"></div>
       <!--  <%= f.label :password, class: "col-2 col-form-label text-dark" %>--> 
          <div class="col-8"> 
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "пароль" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit(@user.new_record? ? "Присоединиться!" : "Обновить данные", class: "btn btn-outline-succes text-dark btn-lg") %>
        </div>
      <% end %>
    </div>
    
   
    
  </div>
</div> 