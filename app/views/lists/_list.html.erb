





<div class="row mb-2 mt-2" >

<div class="col-md-7 col-lg-7 col-sm-11" style="

">

<div class="container"    >
  <% @lists.each do |list| %>
    <div class="row justify-content-md ">
      <div class=" mt-4">

       <% if list.categories.any? %>
              <div class="mt-2 collapse rendercat word-wrap "  id="a<%=list.id%>" style="    transition: box-shadow 0.25s cubic-bezier(0.33, 1, 0.68, 1),height 0.25s cubic-bezier(0.33, 1, 0.68, 1);">
         
              <%= render list.categories %>
              
              </div>
            <% end %>
         
   

        <div class="card cardhover  rounded  shadow " >


          <div class="card-header font-italic cimg " >
          <div class="container">
            <div class="row">
            
              <div class="col-2 " > <%= image_tag 'ruby1.png', style: 'width:10%;min-width:50px;display:inline;top:0;padding:5px' %></div>
 <div class="col-8"> <h5 class="card-title " style="display:inline;" ><%= link_to list.title, list_path(list), class: "text-danger" %></h5>
        
        </div>
            </div>
          </div>
          
         
      
         
        
          </div>
          
          <div class="card-body "  >
          
           
          
            <p class="card-text"><%= truncate(list.description, length: 150) %></p>
          
          </div>
          <div class="card-footer text-muted cimg collapse" id="a<%=list.id%>" style="    transition: box-shadow 0.25s cubic-bezier(0.33, 1, 0.68, 1),height 0.25s cubic-bezier(0.33, 1, 0.68, 1);">

 
            <% if logged_in? && (list.user == current_user || current_user.admin?)  %>
              <%= link_to "Изменить", edit_list_path(list), class: "btn btn-outline-danger", style:"z-index:100" %>
              <%= link_to "Удалить", list_path(list), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"}, style:"z-index:100" %>
            <% end %>
            <div  style="text-align:left;display:block;" class="mt-2 pb-2"> <small class="display:block">
          
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar-check" viewBox="0 0 16 16">
  <path d="M10.854 7.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 9.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
