<div class=" align-items-stretch  bg-white  offcanvas-lg offcanvas-bottom bd-sidebar pb-5"  style="left:0"  tabindex="-1" 
id="bdSidebar" aria-labelledby="bdSidebarOffcanvasLabel"  >

 
    <a href="/" class="d-flex align-items-center flex-shrink-0 p-3 link-dark text-decoration-none border-bottom" width=100%>
    <div class="row" style="min-width:100%">
    <div class="col-10">
     
      <span class="fs-5 fw-semibold">Список категорий</span>
      </div>
          <div class="col-2">
        
          
          
          </div>

   </div>
    </a>
    


    <div class="list-group list-group-flush border-bottom scrollarea stick px-1" >
     <% @categories.each do |category| %>
     
     
        <div class="d-flex w-100 align-items-center justify-content-between "style="width:100%; word-wrap: break-word;">
         <div class=" dropdown"style="width:90%; word-wrap: break-word;">
          

           <button class="btn btn-toggle align-items-center rounded collapsed butcatact" type="button" data-bs-toggle="collapse" data-bs-target="#<%= category.name %>" aria-expanded="false" aria-controls=<%= category.name %>>
                  <strong class="mb-1"><%= category.name %></strong>
           </button>
           <div class="collapse" id=<%= category.name %> style=" width:100%">
          
          <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small" style="width:100%; transition: box-shadow 0.25s cubic-bezier(0.33, 1, 0.68, 1),height 0.25s cubic-bezier(0.33, 1, 0.68, 1);">
        
          <% category.lists.each do |list| %>
          <li style="word-wrap: break-word; width:100%">
            <div class="container">
              <div class="row">
                <div class="col-lg-11 col-md-11 col-sm-11">
                       <a class="dropdown-item"  href=""> <%= link_to list.title ,list_path(list), class: "dropdown-item;
                      word-wrap: break-word", style: "font-size:15px" %></a>
                      <hr>
                </div>
              </div>
            </div>
            
          </li>

            <% end %>
          </ul>
           </div>
        
          </div>
     
          <small class=" butcatactSmall" ><%= category.lists.count%></small>
        </div>
   
      </a>

    <% end %>
   

     

</div>
  </div>

