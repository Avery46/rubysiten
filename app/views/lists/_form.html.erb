
<div class="container mt-5">
 
  <div class="row justify-content-center ">
    <div class="col-12 ">
    
      <%= form_with(model: @list, class: "bg-light p-3 mb-3 ccimg rounded  ", local: true) do |f| %>
      <div class="form-group row mb-3">
        <div class="col-2"></div>
       
        <div class="col-8"> <%= f.label :title,"Название", class: "col-2 col-form-label text-dark" %>
          <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "" %>
        </div>
      </div>

        <div class="form-group row mb-3">
          <div class="col-2"></div>
        
          <div class="col-8">     <%= f.label :description,"Описание", class: "col-2 col-form-label text-dark" %>
            <%= f.text_area :description, rows: 2, class: "form-control shadow rounded", placeholder: "" %>
          </div>
        </div>
        <div class="form-group row mb-3">
          <div class="col-2"></div>
         
          <div class="col-8">    <%= f.label :fulltext,"Текст", class: "col-2 col-form-label text-dark" %>
            <%= f.text_area :fulltext, rows: 10, class: "form-control shadow rounded", placeholder: "" %>
          </div>
        </div>

        <div class="form-group row mb-3">
        <div class="col-2"></div>
            <%= f.label :category,"Категории", class: "col-2 col-form-label text-dark" %>
          <div class="col-8"> 
            <%= f.collection_select(:category_ids, Category.all, :id, :name,
            { prompt: ""}, { multiple: true, size: 3, class: "custom-select shadow rounded" }) 
            %>
          </div>
        </div>

           <div class="form-group row justify-content-center">
              <%= f.submit("Добавить/обновить",class: "btn btn-outline-succes  text-dark btn-lg")  %>
           </div>
      <% end %>
    </div>
      
  
      
  </div>
</div> 