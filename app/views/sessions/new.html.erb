<h1 class="text-center mt-4">Вход</h1>


<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <%= form_with(scope: :session, url: login_path, class: " p-3 mb-3 ccimg rounded bg-light", local: true) do |f| %>

        <div class="form-group row mb-3">
         <div class="col-2"></div>
          <div class="col-8"> 
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="form-group row mb-3">
             <div class="col-2"></div>
          <div class="col-8"> 
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "пароль" %>
          </div>
        </div>

        <div class="form-group row  justify-content-center">
          <%= f.submit "Продолжить", class: "btn btn-outline-succes text-dark btn-lg" %>
        </div>
      <% end %>
    </div>
    
     
    
  </div>
</div> 