
<%= form_with(model: @category, class: " p-3 mb-3 ccimg rounded", local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :name,"Наименование", class: "col-2 col-form-label text-dark" %>
    <div class="col-12">
      <%= f.text_field :name, class: "form-control shadow rounded", placeholder:"введите здесь"  %>
    </div>
  </div>

  <div class="form-group row justify-content-center">
    <%= f.submit("Обновить",class: "btn btn-outline-succes text-dark btn-lg" ) %>
  </div>
<% end %> 